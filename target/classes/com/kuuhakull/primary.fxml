<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.GridPane?>
<GridPane
        stylesheets="@style.css" alignment="CENTER"
        xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.kuuhakull.PrimaryController"
        minHeight="500.0" minWidth="800.0">
   <children>
      <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="150.0"
                 pickOnBounds="true" preserveRatio="true"
                 GridPane.columnIndex="2" GridPane.rowIndex="0"
      >
         <image><Image url="@khsu.jpg" backgroundLoading="true"/></image>
      </ImageView>
      <VBox fx:id="vBox" spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <Button fx:id="Button0" userData="1" text="Воспитательная и развивающая деятельность" onAction="#switchToSecondary"/>
            <Button fx:id="Button1" userData="2" text="Педагогическая деятельность" onAction="#switchToSecondary"/>
            <Button fx:id="Button2" userData="3" text="Самообследование личностной компетентности" onAction="#switchToSecondary"/>
         </children>
      </VBox>
   </children>
   <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/></padding>
</GridPane>
